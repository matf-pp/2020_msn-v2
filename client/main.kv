#:kivy 1.10.1
#:set textFontSize 25
#:set labelFontSize 20
#:import C kivy.utils.get_color_from_hex

<MyTextInput@TextInput>:
    font_size: '14dp'
    background_color: 1,1,1,1
    backgorund_normal: ''
    cursor_color: C('#000000')
    canvas.before:
        Color:
            rgba: C('#000000')
    canvas.after:
        Color:
            rgb: C('#8be4f2')
        Ellipse:
            angle_start:180
            angle_end:360
            pos:(self.pos[0] - self.size[1]/2.0, self.pos[1])
            size: (self.size[1], self.size[1])
        Ellipse:
            angle_start:360
            angle_end:540
            pos: (self.size[0] + self.pos[0] - self.size[1]/2.0, self.pos[1])
            size: (self.size[1], self.size[1])
        Color:
            rgba: C('#8be4f2')
        Line:
            points: self.pos[0] , self.pos[1], self.pos[0] + self.size[0], self.pos[1]
        Line:
            points: self.pos[0], self.pos[1] + self.size[1], self.pos[0] + self.size[0], self.pos[1] + self.size[1]
        Line:
            ellipse: self.pos[0] - self.size[1]/2.0, self.pos[1], self.size[1], self.size[1], 180, 360
        Line:
            ellipse: self.size[0] + self.pos[0] - self.size[1]/2.0, self.pos[1], self.size[1], self.size[1], 360, 540



<LoginScreen>:
    canvas.before:
        Color:
            rgba: 0.1875, 0.1875, 0.1875, 1
        Rectangle:
            pos: self.pos
            size: self.size
    cols: 1
    padding: [100, 50]
    spacing: 20
    Label:
        text: 'Please enter the IP Adress:'
        font_size: labelFontSize
        size_hint: (1,0.5)

    MyTextInput:
        padding: (20,(self.height - textFontSize)/2)
        font_size: textFontSize - 5
        id: ip
        write_tab: False
        multiline: False
        on_text_validate: root.login(root.ids.ip.text, root.ids.password.text, root.ids.username.text)
        
    Label:
        text: 'Enter the server password:'
        font_size: labelFontSize
        size_hint: (1,0.5)

    MyTextInput:
        padding: (20,(self.height - textFontSize)/2)
        font_size: textFontSize - 5
        id: password
        write_tab: False
        multiline: False
        on_text_validate: root.login(root.ids.ip.text, root.ids.password.text, root.ids.username.text)

    Label:
        text: 'Enter your username:'
        font_size: labelFontSize
        size_hint: (1,0.5)

    MyTextInput:
        padding: (20,(self.height - textFontSize)/2)
        font_size: textFontSize - 5
        id: username
        write_tab: False
        multiline: False
        on_text_validate: root.login(root.ids.ip.text, root.ids.password.text, root.ids.username.text)

    SmoothButton:
        text: 'Login'
        size_hint : (2,1)
        font_size: labelFontSize
        on_press: root.login(root.ids.ip.text, root.ids.password.text, root.ids.username.text)
        
<LoadingScreen>:
    loadingText: estText
    canvas.before:
        Color:
            rgba: 0.1875, 0.1875, 0.1875, 1
        Rectangle:
            pos: self.pos
            size: self.size
    cols: 1
    padding: [100, 200]
    spacing: 20

    Label:
        id: estText
        text: 'Establishing connection'
        font_size: textFontSize

    SmoothButton:
        text: 'Return'
        on_press: root.go_back()

<AppScreen>:
    label_wid: mainTextArea
    chat_list: userListGrid

    canvas.before:
        Color:
            rgba: 0.1875, 0.1875, 0.1875, 1
        Rectangle:
            pos: self.pos
            size: self.size
    cols: 2

    BoxLayout:
        orientation: 'vertical'
        size_hint: (0.2, 1)
        ScrollView:
            id: scroll
            GridLayout:
                id: userListGrid
                cols: 1
                text_size: self.width, None
                size_hint_y: None
                height: self.minimum_height
                SmoothButton:
                    size_hint_y: None
                    height: 80
                    text: 'Global chat'
                    on_press: root.openGlobalChat()

    GridLayout:
        cols: 1

        ScrollView:

            Label:
                id: mainTextArea
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]

        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, 0.1)
            TextInput:
                id: chatInput
                multiline: False
                write_tab: False
                on_text_validate: root.send_message(root.ids.chatInput, root.ids.mainTextArea); self.text = '';
            SmoothButton:
                size_hint: (0.1, 1)
                text: 'Send'
                on_press: root.send_message(root.ids.chatInput, root.ids.mainTextArea); root.ids.chatInput.text = '';
                on_release: root.ids.chatInput.focus = True

        SmoothButton:
            size_hint: (1, 0.1)
            text: 'Disconnect'
            on_press: root.disconnect()

<SmoothButton@Button>:
    background_color: (0,0,0,0)
    color: (0,0,0,1)
    backgorund_normal: ''
    back_color: (0.55,0.89,0.95,1)
    border_radius: [18]
    canvas.before:
        Color:
            rgba: self.back_color
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: self.border_radius
